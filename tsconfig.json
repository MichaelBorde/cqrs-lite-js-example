{
  "compilerOptions": {
    "outDir": "./build",
    "target": "es2015",
    "module": "commonjs",
    "declaration": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "types": ["jest", "node"],
    "lib": ["es2017"]
  },
  "include": ["./lib/**/*"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.e2e.ts",
    "**/*.spec.js",
    "**/test/*.ts"
  ]
}
